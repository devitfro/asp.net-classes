@model Book

@{
    ViewBag.Title = "Add book";
}

<form asp-action="Create" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label">Author</label>
        <input type="text" asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Year</label>
        <input type="number" asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre" class="control-label">Genre</label>
        <input type="text" asp-for="Genre" class="form-control" />
    </div>
    <div class="col p-3"></div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>