@{
    ViewData["Title"] = "Form Page";
}

<div class="text-center m-5">
    <h1>Registration form</h1>
    <form asp-action="Index" method="post">
        <div class="form-group">
            <label for="Name">Enter your name:</label>
            <input type="text" name="Name" class="form-control m-2" />

            <label for="Age">Enter your Age:</label>
            <input type="number" name="Age" class="form-control m-2" />

            <label for="Email">Enter your Email:</label>
            <input type="email" name="Email" class="form-control m-2" />

            <label for="DateOfBirth">Enter your Birthday:</label>
            <input type="date" name="DateOfBirth" class="form-control m-2" />
        </div>

        <div class="form-group m-3">
            <button class="btn btn-primary" type="submit">Send</button>
        </div>
    </form>
</div>

